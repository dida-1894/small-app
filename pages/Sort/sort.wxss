.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.search{
  width: cacl(100% - 20px);
  padding: 10px;
  background-color: #eee;
}
.search input{
  width: cacl(100% - 20px);
  border: 0px;
  border-radius: 3px;
  text-align: center;
  background-color: #fff;
  font-size: 12px;
}
.left {
  width: 19%;
  height: 662px;
  padding-top: 1px;
  border-right: 3px solid #ccc;
  float: left;
}
.left text{
  display: block;
  margin: 25px 5px;
  font-size: 14px;
  color: #ccc;
}
.right{
  width: 80%;
  float: left
}
.pro-title{
  text-align: center;
  height: 40px;
  padding-top: 1px;
  position: relative;
}
 .pro-title image{
  width: 20px;
  height: 38px;
}
.pro-title text{
  line-height: 2;
  margin-left: 20px;
  font-size: 12px;
  color: #ccc;
  position: absolute;
  top: 10px;
}
.pro-item{
  overflow: auto;
}
.pro-item .p-i-item{
  width: 33%;
  text-align: center;
  float: left;
}
.p-i-item image{
  width: 100px;
  height: 100px;
}
.p-i-item text{
  color: #ef8a70;
  font-size: 14px;
}
.ii{
  border-bottom: 7px solid #ccc;
}
.no-border{
  border: 0px;
}