.userinfo-avatar{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align:middle;
}
.user-bottom{
  position: absolute;
  bottom: 0px;
  left: 0px;
  background-color: rgba(160, 157, 157, 0.5);
  padding: 10px;
  font-size: 12px;
  color: #000;
  width: 95%;
}
.get{
  float: right;
  font-size: 12px;
  background-color: #ea2c2c;
  padding: 10px;
}

.user-bottom text{
  vertical-align:middle;
}
.user-bottom image{
  width: 20px;
  height: 20px;
  vertical-align:middle;
}
.userinfo{
  height: 120px;
  padding: 20px 0px 0px 10px;
  background-color: #f78585;
  color: #fff;
  position: relative;
}
.userinfo-nickname{
  font-size: 14px;
  vertical-align:middle;
  padding-left: 20px; 
}
.deals{
  border-bottom: 6px solid #eee; 
}
.deals-title{
  padding: 10px;
  color: #ccc;
  border-bottom: 1px solid #eee;
  font-size: 16px;
}
.servers{
  overflow: hidden;
  padding: 10px 0px;
}
.ser-item {
  float: left;
  width: 20%;
  text-align: center;
  font-size: 14px;
  color: #ccc;
}
.ser-item image{
  width: 30px;
  height: 30px;
}
.my image{
  width: 35px;
  height: 35px;
  vertical-align:middle;
}
.my{
  padding: 15px 20px;
  border-bottom: 1px solid #ccc; 
}
.my text{
  font-size: 18px;
  color: #ccc;
  vertical-align:middle;
  margin-left: 10px;
}
.right{
  float: right;
}